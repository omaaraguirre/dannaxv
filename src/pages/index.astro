---
import Confirmation from '@/components/Confirmation.astro'
import Countdown from '@/components/Countdown.astro'
import Gallery from '@/components/Gallery'
import Hero from '@/components/Hero.astro'
import Hotels from '@/components/Hotels.astro'
import Invitation from '@/components/Invitation.astro'
import ParallaxImage from '@/components/ParallaxImage.astro'
import Regalos from '@/components/Regalos.astro'
import Requirements from '@/components/Requirements.astro'
import Schedule from '@/components/Schedule.astro'
import Sponsors from '@/components/Sponsors.astro'
import { prefix } from '@/constants'
import Layout from '@/layouts/Layout.astro'
---

<Layout title='XV Fernanda'>
  <Hero
    title='Fernanda'
    description='¡Mis XV años!'
    date='Sábado, 27 de Diciembre 2024'
    image={`${prefix}/img/photo-1.webp`}
  />

  <Invitation
    header='Será una noche mágica para mí y me encantaría que la disfrutes conmigo. Espero verte ahí.'
    name='Nombre'
    persons='# pases'
    footer='¡Me hará muy feliz que me incorpores en este día tan especial!'
  />

  <Sponsors
    message='Hace 15 años me regalaron la vida y a una gran familia, acompáñanos a festejar mi cumpleaños # XV.'
    image={`${prefix}/img/flores.webp`}
    groups={[
      {
        title: 'Mis papás',
        persons: ['David Marco Alberto Monzalvo Vega','Monzerrat Lozano Jiménez',],
      },
      {
        title: 'Mis padrinos',
        persons: ['Alicia Camarena Hernández', 'Luis Alfredo Medina Camarena'],
      },
    ]}
  />

  <ParallaxImage image={`${prefix}/img/photo-2.webp`} />

  <Schedule
    title='Dónde y cuando'
    description='La ceremonia y recepción se llevarán a cabo en la misma ubicación:'
    date='Sábado, 27 de Diciembre 2024'
    times={['Ceremonia: 7:00pm', 'Recepción: 8:00pm']}
    location={{
      name: '"Salón de Eventos en Pachuca - Centala Eventos"',
      address: 'Esquina con Blvrd. Ramón G. Bonfil, Blvd. Sta. Catarina, 42082 Pachuca de Soto, Hgo.',
      link: 'https://maps.app.goo.gl/ts3FE1zkP58EaR1Z7',
    }}
  />

  <Requirements
    image={`${prefix}/img/flores.webp`}
    title='Dress code'
    code='Formal'
    message='El color rosado es reservado para la fiesta de cumpleaños'
    info={[
      {
        title: 'Hombres',
        type: 'Traje',
        image: `${prefix}/img/suit.webp`,
      },
      {
        title: 'Mujeres',
        type: 'Vestido Largo',
        image: `${prefix}/img/dress.webp`,
      }
    ]}
  />

  <Gallery
    client:only='react'
    images={[
      `${prefix}/img/photo-1.webp`,
      `${prefix}/img/photo-2.webp`,
      `${prefix}/img/photo-3.webp`,
      `${prefix}/img/photo-4.webp`,
      `${prefix}/img/photo-5.webp`,
      `${prefix}/img/photo-6.webp`
    ]}
  />

  <Regalos 
    image={`${prefix}/img/flores.webp`}
    title='Mesa de regalos' 
    description='Tu presencia es mi mayor regalo, pero si deseas tener un detalle conmigo, lo puedes hacer en efectivo o depositándolo en un sobre.'
  />

  <Countdown
    image={`${prefix}/img/photo-3.webp`}
  />

  <Hotels 
    title='Hospedaje' 
    description='Para una estadía más placentera te compartimos estas sugerencias de hospedaje.'
    hotels={[
      {
        name: 'Hotel Las Calandrias',
        phone: '244 446 2020',
        address: 'Carretera Puebla – Izucar de Matamoros, Atlixco Km. 5.',
        link: 'https://www.lascalandrias.com.mx/',
      },
      {
        name: 'Hotel Boutique la Rioja',
        phone: '244 688 5793',
        address: 'Paseo de las Bugambilias 3102 Col. Val de Cristo C.P. 74293',
        link: 'https://www.lariojahb.com.mx/',
      },
      {
        name: 'Rincon Sagrado',
        phone: '244 144 9785',
        address: 'Calle Tepexco no. 503 Col. Lomas de Temaxcalapa Atlixco, Pue. C.P. 74210',
        link: 'https://www.rinconsagrado.com/',
      }
    ]}
  />

  <Confirmation
    image={`${prefix}/img/flores.webp`}
    title='Confirmación'
    description='Es muy importante para nosotros contar con tu confirmación lo antes posible.'
  />
</Layout>
