  <Invitation
    header='Será una noche mágica para mí y me encantaría que la disfrutes conmigo. Espero verte ahí.'
    name='Nombre'
    persons='# pases'
    footer='¡Me hará muy feliz que me incorpores en este día tan especial!'
  />
</Layout>
