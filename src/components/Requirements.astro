---
import SimpleParallax from '@/components/SimpleParallax.astro'

const { image, title, code, message, info } = Astro.props
---

<SimpleParallax image={image}>
  <div class='px-8 py-20 flex flex-col justify-center items-center gap-10'>
    <h2 data-aos='fade-up' class='font-dancing text-5xl text-accent'>
      {title}
    </h2>
    <p class='text-lg uppercase'>{code}</p>
    <p class="text-balance">{message}</p>
    <div class='w-full max-w-4xl my-10 grid grid-cols-2 gap-8'>
      {
        info.map((info) => (
          <div class='flex flex-col items-center gap-4'>
            <img
              src={info.image}
              alt={info.type}
              class='max-h-40 w-auto m-4'
              loading='lazy'
              data-aos='fade-in'
            />
            <h4 class='font-bold'>{info.title}</h4>
            <p>{info.type}</p>
          </div>
        ))
      }
    </div>
    <div class='w-full max-w-sm p-6 border-2 border-accent/50 rounded'>
      <p class='uppercase'>- Sin ni√±os -</p>
    </div>
  </div>
</SimpleParallax>
