---
import ParallaxImage from '@/components/ParallaxImage.astro'

const { message, groups, image } = Astro.props
---

<ParallaxImage image={image}>
  <div
    class='absolute size-full px-8 flex flex-col justify-center items-center gap-16 font-quicksand text-center'
  >
    <p class="text-balance">{message}</p>
    <div class="w-fit grid md:grid-cols-2 gap-16 md:gap-40 justify-center items-center">
      {
        groups.map(({ title, persons }) => (
          <div class='space-y-4'>
            <h4 class='font-dancing text-4xl text-accent mb-8'>{title}</h4>
            {persons.map((person) => (
              <p>{person}</p>
            ))}
          </div>
        ))
      }
    </div>
  </div>
</ParallaxImage>
