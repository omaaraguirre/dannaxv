---
import SimpleParallax from '@/components/SimpleParallax.astro'

const { message, groups, image } = Astro.props
---

<SimpleParallax image={image}>
  <div class='px-8 py-20 flex flex-col justify-center items-center gap-16'>
    <p class='text-balance'>{message}</p>
    <div class='w-fit grid md:grid-cols-2 gap-16 md:gap-40 justify-center items-center'>
      {
        groups.map(({ title, persons }) => (
          <div class='space-y-4'>
            <h4 class='font-dancing text-4xl text-accent mb-8' data-aos='fade-up'>
              {title}
            </h4>
            {persons.map((person) => (
              <p>{person}</p>
            ))}
          </div>
        ))
      }
    </div>
  </div>
</SimpleParallax>
