---
const { header, name, persons, footer } = Astro.props
---

<section class='min-h-svh px-8 py-20 grid place-items-center'>
  <div class='flex flex-col justify-center items-center gap-20'>
    <p class='text-balance'>{header}</p>
    {
      Astro.url.pathname !== '/' && (
        <div class='w-full flex flex-col justify-between gap-10'>
          <hr class='w-1/4 mr-auto border-accent' />
          <p data-aos='fade-up' class='font-dancing text-4xl text-accent'>
            {name}
          </p>
          <p class='uppercase'>{persons}</p>
          <hr class='w-1/4 ml-auto border-accent' />
        </div>
      )
    }
    
    <p class='text-balance'>{footer}</p>
  </div>
</section>
